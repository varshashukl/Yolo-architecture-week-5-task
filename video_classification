import cv2
import os

def extract_frames(video_path: str, output_dir: str, fps: int = 1):
    os.makedirs(output_dir, exist_ok=True)
    cap = cv2.VideoCapture(video_path)
    count = 0
    frame_id = 0
    while cap.isOpened():
        ret, frame = cap.read()
        if not ret:
            break
        if count % int(cap.get(cv2.CAP_PROP_FPS)//fps) == 0:
            cv2.imwrite(os.path.join(output_dir, f"frame_{frame_id}.jpg"), frame)
            frame_id += 1
        count += 1
    cap.release()